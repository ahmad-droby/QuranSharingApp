# Quran Video Generator API - Environment Configuration Template
# Copy this file to .env and customize the values for your environment

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Database connection URL
# SQLite (default): sqlite:///quran_video_jobs.db
# PostgreSQL: postgresql://user:password@localhost:5432/quranvideo
# MySQL: mysql://user:password@localhost:3306/quranvideo
DATABASE_URL=sqlite:///quran_video_jobs.db

# Echo SQL statements to console (true/false)
DATABASE_ECHO=false

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Quran.com API endpoint
QURAN_COM_API_URL=https://api.quran.com/api/v4

# Quran.com audio base URL
QURAN_COM_AUDIO_BASE_URL=https://verses.quran.com/

# AlQuran.Cloud API endpoint
ALQURAN_CLOUD_API_URL=https://api.alquran.cloud/v1

# API request timeout in seconds
API_REQUEST_TIMEOUT=45

# Maximum number of retries for failed API requests
API_MAX_RETRIES=3

# Delay between retries in seconds
API_RETRY_DELAY=1.0

# ============================================================================
# VIDEO GENERATION CONFIGURATION
# ============================================================================
# Video frames per second
VIDEO_FPS=24

# Video codec (libx264, libx265, etc.)
VIDEO_CODEC=libx264

# Audio codec (aac, mp3, etc.)
AUDIO_CODEC=aac

# Video bitrate
VIDEO_BITRATE=5000k

# Encoding preset (ultrafast, fast, medium, slow, veryslow)
VIDEO_PRESET=medium

# Arabic font size
FONT_SIZE_ARABIC=48

# English font size
FONT_SIZE_ENGLISH=36

# Text color
TEXT_COLOR=white

# Audio crossfade duration in milliseconds
AUDIO_CROSSFADE_MS=150

# Audio padding duration in milliseconds
AUDIO_PADDING_MS=100

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=10

# Maximum requests per hour per IP
RATE_LIMIT_PER_HOUR=50

# Maximum concurrent video generation jobs
MAX_CONCURRENT_JOBS=3

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================
# Enable video caching (true/false)
CACHE_ENABLED=true

# Maximum age of cached videos in days
CACHE_MAX_AGE_DAYS=7

# Cache cleanup interval in hours
CACHE_CLEANUP_INTERVAL_HOURS=24

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path (optional, leave empty for console only)
LOG_FILE_PATH=

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Server host
HOST=0.0.0.0

# Server port
PORT=8000

# Enable auto-reload in development (true/false)
RELOAD=false

# Number of worker processes
WORKERS=1
